<style>
    .menu-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        /* Default: Three columns */
        gap: 15px;
        /* Space between items */
        padding: 15px;
        /* Container padding */
        max-width: 1200px;
        /* Maximum width of the container */
        margin: 0 auto;
        /* Center the container */
    }

    .menu-container {
        display: grid;
        gap: 15px;
        /* Space between items */
        padding: 15px;
        /* Container padding */
        max-width: 1200px;
        /* Maximum width of the container */
        margin: 0 auto;
        /* Center the container */
    }

    .Menu-cards {
        flex-wrap: wrap;
        justify-content: flex-start;
        margin-left: 10%;
        margin-right: 10%;
        gap: 70px;
    }

    .card {
        margin: 10px;
        /* Add margin between cards */
        /* Ensure the card doesn't exceed half of the container width */
        max-width: calc(50% - 20px);
        /* Ensure the card doesn't exceed half of the container width */
        box-sizing: border-box;
        /* Include padding and border in the width */
        display: flex;
        flex-direction: column;
        /* Stack child elements vertically */
    }

    .card .card-image {
        height: 250px;
        /* Atur tinggi gambar */
        width: 300px;
        /* Atur lebar gambar */
    }

    @media (max-width: 1268px) {
        .card {
            flex: 0 0 calc(60% - 20px);
            /* Full width on smaller screens */
            max-width: calc(45% - 20px);
            /* Ensure full width on smaller screens */
        }
    }

    @media (max-width: 1068px) {
        .card {
            flex: 0 0 calc(100% - 20px);
            /* Full width on smaller screens */
            max-width: calc(100% - 20px);
            /* Ensure full width on smaller screens */
            margin-top: 30px;
        }
    }

    @media (max-width: 1023px) {
        .modal-dialog {
            max-width: 90%;
            /* Atur lebar modal menjadi 90% saat lebar layar 1023px atau kurang */
        }
    }


    .menu-button {
        padding: 10px 20px;
        border: 1px solid #b10e15;
        border-radius: 35px;
        text-align: center;
        text-decoration: none;
        color: #b10e15;
        /* Original text color */
        font-size: 1em;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .quantity-container {
        display: flex;
        align-items: center;
        /* Align items vertically */
    }

    .minus-btn,
    .plus-btn {
        flex: 0 0 auto;
        /* Prevent buttons from stretching */
        margin: 0 5px;
        /* Add margin between buttons and input */
    }


    @media (max-width: 576px) {
        .modal-lg {
            max-width: 100%;
        }
    }


    /* Large screens: Five columns */
    @media (min-width: 1200px) {
        .menu-container {
            grid-template-columns: repeat(5, 1fr);
        }
    }

    /* Medium screens: Four columns */
    @media (min-width: 992px) and (max-width: 1199px) {
        .menu-container {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* Small screens: Three columns */
    @media (min-width: 768px) and (max-width: 991px) {
        .menu-container {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Extra small screens: Two columns */
    @media (max-width: 767px) {
        .menu-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* Very small screens: One column */
    @media (max-width: 576px) {
        .menu-container {
            grid-template-columns: 1fr;
        }
    }

    .icon {
        font-size: 24px;
        color: #d91319;
    }
</style>

<style>
    /* Gaya dasar untuk ul dan li */
    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        position: relative;
        display: inline-block;
    }

    /* Gaya dasar untuk link */
    li a {
        text-decoration: none;
        padding: 10px;
        display: block;
        color: black;
        /* Ubah warna teks sesuai kebutuhan */
    }

    /* Sembunyikan dropdown menu awalnya */
    li ul {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        padding: 0;
        margin: 0;
        list-style-type: none;
        background-color: white;
        /* Ubah warna latar belakang sesuai kebutuhan */
        border: 1px solid #ccc;
        /* Tambahkan border jika diperlukan */
    }

    /* Tampilkan dropdown menu saat hover */
    li:hover ul {
        display: block;
    }

    /* Gaya untuk link dalam dropdown */
    li ul li a {
        padding: 10px;
        color: black;
        /* Ubah warna teks sesuai kebutuhan */
        white-space: nowrap;
    }

    /* Gaya untuk link dalam dropdown saat hover */
    li ul li a:hover {
        background-color: #f0f0f0;
        /* Ubah warna latar belakang saat hover sesuai kebutuhan */
    }
</style>


